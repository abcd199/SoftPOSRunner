<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_margin="5dp"
       tools:context=".MainActivity">

      <EditText
          android:id="@+id/eTuserId"
          android:hint="@string/user_id"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <EditText
          android:id="@+id/eTPass"
          android:hint="@string/password"

          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <EditText
          android:id="@+id/eTDesc"
          android:layout_width="match_parent"

          android:layout_height="wrap_content"
          android:hint="@string/description" />


      <Button
          android:text="@string/init_api_mosambee"
          android:layout_marginTop="30dp"

          android:background="@color/colorPrimary"
          android:textColor="@android:color/white"
          android:onClick="bTinitApiPAYTM"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:ignore="OnClick" />



      <Button
          android:text="@string/health_check"
          android:layout_marginTop="30dp"
          android:background="@color/colorPrimary"
          android:textColor="@android:color/white"
          android:onClick="healthCheckPaytm"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:ignore="OnClick" />





      <Button
          android:text="@string/get_app_details_mosambee"
          android:layout_marginTop="30dp"
          android:background="@color/colorPrimary"
          android:textColor="@android:color/white"
          android:onClick="getDetailsPaytm"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:ignore="OnClick" />


      <EditText
          android:id="@+id/eTAmount"
          android:layout_marginTop="30dp"
          android:hint="Amount"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />



      <Button
          android:text="@string/pay_using_mosambee"
          android:layout_marginTop="30dp"
          android:background="@color/colorPrimary"
          android:textColor="@android:color/white"
          android:onClick="payPAYTM"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:ignore="OnClick" />

